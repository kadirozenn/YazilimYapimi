<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Fragment.FragmentWords">

    <EditText
        android:id="@+id/Fragment_Add_Word_Word"

        style="@style/LoginRegisterEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/et_bg_profil"
        android:ems="10"
        android:textColor="#000"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#666363"
        android:text="Kelime"
        app:layout_constraintBottom_toTopOf="@+id/Fragment_Add_Word_Word"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Word"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Word" />

    <EditText
        android:id="@+id/Fragment_Add_Word_Sentence"
        android:layout_width="0dp"
        android:layout_height="40dp"
        style="@style/LoginRegisterEditText"
        android:background="@drawable/et_bg_profil"
        android:textColor="#000"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Mean"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Mean"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_Add_Word_Mean" />

    <TextView
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="#666363"
        android:text="Cümle İçinde Kullanınız."
        app:layout_constraintBottom_toTopOf="@+id/Fragment_Add_Word_Sentence"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Sentence"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Sentence" />

    <Button
        android:id="@+id/Fragment_Add_Word_Add"
        android:layout_width="0dp"
        android:layout_height="40dp"

        android:layout_marginTop="24dp"
        android:background="@drawable/et_bg_profil"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Ekle"
        android:textAllCaps="false"
        android:textColor="#666363"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Sentence"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Sentence"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_Add_Word_Sentence" />

    <EditText
        android:id="@+id/Fragment_Add_Word_Mean"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:textColor="#000"
        android:inputType="textPersonName"
        style="@style/LoginRegisterEditText"
        android:background="@drawable/et_bg_profil"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Word"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Word"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_Add_Word_Word" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Anlamı"
        app:layout_constraintBottom_toTopOf="@+id/Fragment_Add_Word_Mean"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Mean"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Mean" />


</android.support.constraint.ConstraintLayout>