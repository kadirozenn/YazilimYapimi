<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".Activity.ActivityQuestion">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Activity_Question_Const"
        android:layout_width="0dp"
        android:layout_height="152dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.17000002">

        <TextView
            android:id="@+id/Activity_Question_Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/Activity_Question_Sentence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Activity_Question_Sentence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="TextView"
            android:textColor="#000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/Activity_Question_Answer_A"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Button"
        android:background="@drawable/btn_bg"
        android:textAllCaps="false"
        android:onClick="ActvityQuestionBtn"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Question_Const"
        app:layout_constraintStart_toStartOf="@+id/Activity_Question_Const"
        app:layout_constraintTop_toBottomOf="@+id/Activity_Question_Const" />

    <Button
        android:id="@+id/Activity_Question_Answer_B"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="ActvityQuestionBtn"
        android:background="@drawable/btn_bg"
        android:text="Button"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Question_Answer_A"
        app:layout_constraintStart_toStartOf="@+id/Activity_Question_Answer_A"
        app:layout_constraintTop_toBottomOf="@+id/Activity_Question_Answer_A" />

    <Button
        android:id="@+id/Activity_Question_Answer_C"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Button"
        android:background="@drawable/btn_bg"
        android:onClick="ActvityQuestionBtn"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Question_Answer_B"
        app:layout_constraintStart_toStartOf="@+id/Activity_Question_Answer_B"
        app:layout_constraintTop_toBottomOf="@+id/Activity_Question_Answer_B" />

    <Button
        android:id="@+id/Activity_Question_Answer_D"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="Button"
        android:textAllCaps="false"
        android:onClick="ActvityQuestionBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Question_Answer_C"
        app:layout_constraintStart_toStartOf="@+id/Activity_Question_Answer_C"
        app:layout_constraintTop_toBottomOf="@+id/Activity_Question_Answer_C"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/Activity_Question_Progresbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/Activity_Question_Const"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Question_Const"
        app:layout_constraintStart_toStartOf="@+id/Activity_Question_Const"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76" />

</android.support.constraint.ConstraintLayout>