<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".Activity.ActivityRegister">

    <EditText
        android:id="@+id/Fragment_Add_Word_Word"
        style="@style/LoginRegisterEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24000001" />

    <TextView
        android:id="@+id/textView"
        style="@style/LoginRegisterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ad ve Soyad"
        app:layout_constraintBottom_toTopOf="@+id/Fragment_Add_Word_Word"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Word"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Word" />

    <EditText
        android:id="@+id/Fragment_Add_Word_Sentence"
        android:layout_width="0dp"
        android:layout_height="40dp"
        style="@style/LoginRegisterEditText"
        android:layout_marginTop="50dp"
        android:ems="10"

        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Word"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Word"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_Add_Word_Word" />

    <TextView
        android:id="@+id/textView2"
        style="@style/LoginRegisterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Kullanıcı Adı"
        app:layout_constraintBottom_toTopOf="@+id/Fragment_Add_Word_Sentence"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Sentence"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Sentence" />

    <EditText
        android:id="@+id/Activity_Register_Password1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        style="@style/LoginRegisterEditText"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Fragment_Add_Word_Sentence"
        app:layout_constraintStart_toStartOf="@+id/Fragment_Add_Word_Sentence"
        app:layout_constraintTop_toBottomOf="@+id/Fragment_Add_Word_Sentence" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Şifre"
        style="@style/LoginRegisterTextView"
        app:layout_constraintBottom_toTopOf="@+id/Activity_Register_Password1"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Register_Password1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Activity_Register_Password1" />

    <EditText
        android:id="@+id/Activity_Register_Password2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        style="@style/LoginRegisterEditText"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Register_Password1"
        app:layout_constraintStart_toStartOf="@+id/Activity_Register_Password1"
        app:layout_constraintTop_toBottomOf="@+id/Activity_Register_Password1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Şifre Tekrar"
        style="@style/LoginRegisterTextView"
        app:layout_constraintBottom_toTopOf="@+id/Activity_Register_Password2"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Register_Password2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Activity_Register_Password2" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ActivityRegisterButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Kayıt Ol"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/Activity_Register_Password2"
        app:layout_constraintStart_toStartOf="@+id/Activity_Register_Password2"
        app:layout_constraintTop_toBottomOf="@+id/Activity_Register_Password2" />


</android.support.constraint.ConstraintLayout>